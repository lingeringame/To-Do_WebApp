@using To_Do.Models;
@model List<ToDoTask>


<h1 class="indexPageTitle">@ViewBag.title</h1>

<head>
    <link href="~/css/ToDoTaskIndexStyles.css" rel="stylesheet" />
</head>
@if (Model.Count <= 0)
{
    <span>Nothing here yet!</span>
}
else
{
    <a asp-controller="ToDoTask" asp-action="BulkDelete">Select To Delete</a>
    <div>
        <div style="width:50%; float:left">
            <table style="width:75%; margin-top: 5%;">
                @foreach (ToDoTask todo in Model)
                {
                    <tr class="theTasks" data-row="row @todo.Id">
                        <td><input type="checkbox" data-row="row @todo.Id" /></td>
                        <td class="todoText" data-row="row @todo.Id"><p class="markedImportantSign">@(@todo.isImportant == true ? "!" : "")</p></td>
                        <td class="todoText" data-row="row @todo.Id">
                            <p class="taskTitle">@todo.Title</p>
                            <p class="taskOrigin">December 04, 2022 06:43:51 PM</p>
                            </td>
                        <td><a asp-controller="ToDoTask" asp-action="EditTask" asp-route-id="@todo.Id">Edit</a></td>
                        <td><a asp-controller="ToDoTask" asp-action="DeleteTask" asp-route-id="@todo.Id">Delete</a></td>
                    </tr>
                }
            </table>
        </div>

        <div style="width: 50%; float:right; margin-top: 3%;">
            @foreach(ToDoTask todo in Model)
            {
                <div class="taskDesc" style="display:none;" data-row="row @todo.Id">
                    <div class="taskDescTitle">@todo.Title <p class="taskDescTitleImportant">@(todo.isImportant ? "Important" : "")</p></div>
                    <div class="taskDescBody">@todo.Body</div>
                </div>
            }
        </div>
    </div>
}
<script src="~/js/strikethroughTask.js"></script>
<script src="~/js/site.js"></script>
