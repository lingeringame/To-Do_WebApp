@using To_Do.Models;
@model List<ToDoTask>


<h1>@ViewBag.title</h1>

<head>
    <style>
        table {
            width: 50%;
        }
        th {
            border-bottom: 1px solid;
        }
    </style>
</head>
@if (Model.Count <= 0)
{
    <span>Nothing here yet!</span>
}
else
{
    <a asp-controller="ToDoTask" asp-action="BulkDelete">Select To Delete</a>
    <table>
        <tr>
            <th></th>
            <th>Title</th>
            <th>Body</th>
            <th>Marked as Important</th>
        </tr>
        @foreach (ToDoTask todo in Model)
        {
            <tr>
                <td><input type="checkbox" data-row="row @todo.Id"/>✓</td>
                <td class="todoText" data-row="row @todo.Id">@todo.Title</td>
                <td class="todoText" data-row="row @todo.Id">@todo.Body</td>
                <td class="todoText" data-row="row @todo.Id">@todo.isImportant</td>
                <td><a asp-controller="ToDoTask" asp-action="EditTask" asp-route-id="@todo.Id">Edit</a></td>
                <td><a asp-controller="ToDoTask" asp-action="DeleteTask" asp-route-id="@todo.Id">Delete</a></td>
            </tr>
        }
    </table>
}
<script src="~/js/strikethroughTask.js"></script>

