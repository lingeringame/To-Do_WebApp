@using To_Do.Models;
@model List<ToDoTask>


<h1>@ViewBag.title</h1>
@if (Model.Count <= 0)
{
    <span>Nothing here yet!</span>
}
else
{
    <table class="table">
        <tr>
            <th>Title</th>
            <th>Body</th>
        </tr>
        @foreach (ToDoTask todo in Model)
        {
            <tr>
                <td>@todo.Title</td>
                <td>@todo.Body</td>
            </tr>
        }
    </table>
}

